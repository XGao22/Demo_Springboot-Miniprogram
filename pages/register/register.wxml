<!--register.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <label class="lable">用户名：</label>
      <input name="username" auto-focus placeholder="请输入用户名" />
      <label class="lable">密码：</label>
      <input name="password" password type="text" placeholder="请输入密码" />
      <label class="lable">密码确认：</label>
      <input name="passwordCheck" password type="text" placeholder="请再次输入密码" />
      <label class="lable">手机号码：</label>
      <input name="telephone" type="number" maxlength="11" placeholder="请输入手机号码" />
    </view>
    <view class="btn-area">
      <button form-type="submit">注册</button>
      <button form-type="reset">重置</button>
    </view>
  </form>
</view>